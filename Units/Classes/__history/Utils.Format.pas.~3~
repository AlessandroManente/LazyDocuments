unit Utils.Format;

interface

uses
  System.SysUtils,
  System.DateUtils;

type
  TLazyFormat = class
  end;

function FormatDateTimeSQLite(Data: TDateTime): String;

implementation

function FormatDateTimeSQLite(Data: TDateTime): String;
begin
  Result := FormatDateTime('YYYY-MM-DD HH:MM:SS.SSS', Data);
end;

end.
